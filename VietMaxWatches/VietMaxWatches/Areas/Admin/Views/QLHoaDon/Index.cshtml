
@{
     ViewBag.Title = "Index";
     Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
     var list_daduyet = ViewBag.list_daduyet;
     VietMaxWatches.Models.Entities shop = new VietMaxWatches.Models.Entities();
     var Model = ViewBag.model;
}



<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<div class="page-header">

     <a href="#tab_1-1" data-toggle="tab" class="btn btn-outline btn-primary">Chưa xác nhận</a>

     <a href="#tab_2-2" data-toggle="tab" class="btn btn-outline btn-primary">Đã xác nhận</a>


</div>
<div class="dataTable_wrapper tab-content">

     <div class="tab-pane active" id="tab_1-1">
          <h2>Đơn Hàng Chưa Duyệt</h2>
          <table class="table table-striped table-bordered table-hover" id="table">

               <thead>
                    <tr>
                         <th>Mã đơn</th>
                         <th>Khách hàng</th>
                         <th>Nơi giao</th>
                         <th>Thời gian</th>
                         <th>Tổng</th>
                         <th>Chi tiết</th>
                         <th>Xóa</th>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var item in Model)
                    {
                         <tr class="even gradeA">
                              <td>@item.MaHoaDon</td>
                              <td>@item.TenKhachHang</td>
                              <td>@item.DiaChiGiaoHang</td>
                              <td>@item.ThoiGianGiaoHang</td>
                              <td>@double.Parse(@item.TongTien.ToString()).ToString("##,###") VNĐ</td>
                              <td><a href="/Admin/QLHoaDon/ChiTietHd/@item.MaHoaDon" class="btn btn-outline btn-primary">Chi tiết</a></td>
                              <td><a href="/Admin/QLHoaDon/XoaHd/@item.MaHoaDon" class="btn btn-outline btn-primary">Xóa</a></td>
                         </tr>
                    }
               </tbody>
          </table>
     </div>

     <div class="tab-pane" id="tab_2-2">
          <h2>Đơn Hàng Đã Duyệt</h2>
          <table class="table table-striped table-bordered table-hover" id="table2">
               <thead>
                    <tr>
                         <th>Mã đơn</th>
                         <th>Khách hàng</th>
                         <th>Địa chỉ</th>
                         <th>Email</th>
                         <th>SĐT</th>
                         <th>Nơi giao</th>
                         <th>Thời gian</th>
                         <th>Tổng</th>
                         <th>Chi tiết</th>

                    </tr>
               </thead>
               <tbody>

                    @foreach (var item in list_daduyet)
                    {

                         <tr class="even gradeA">
                              <td>@item.MaHoaDon</td>
                              <td>@item.TenKhachHang</td>
                              <td>@item.DiaChiGiaoHang</td>
                              <td>@item.Email</td>
                              <td>@item.SDT</td>
                              <td>@item.DiaChiGiaoHang</td>
                              <td>@item.ThoiGianGiaoHang</td>
                              <td>@double.Parse(@item.TongTien.ToString()).ToString("##,###") VNĐ</td>
                              <td><a href="/Admin/QLHoaDon/ChiTietHd/@item.MaHoaDon" class="btn btn-outline btn-primary">Chi tiết</a></td>

                         </tr>

                    }
               </tbody>
          </table>
     </div>
</div>







