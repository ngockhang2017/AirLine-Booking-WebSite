
@{
     ViewBag.Title = "Index";
     Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

@using VietMaxWatches.Models
@model List<VietMaxWatches.Models.NguoiDung>
<link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />
<h1 class="page-header">
     <a href="/Admin/QLNguoiDung/ThemTk" class="btn btn-outline btn-primary">Thêm</a>
</h1>
<div class="dataTable_wrapper">
     <table class="table table-striped table-bordered table-hover" id="table">
          <thead>
               <tr>
                    <th>#</th>
                    <th>Tên</th>
                    <th>Mật khẩu</th>
                    <th>Sửa</th>
                    <th>Xóa</th>
               </tr>
          </thead>
          <tbody>

               @for (int i = 0; i < Model.Count; i++)
               {
                    
                         <tr class="even gradeA">
                              <td>@Model[i].MaNguoiDung</td>
                              <td>@Model[i].UserName</td>
                              <td>@Model[i].Password</td>
                              <td><a href="/Admin/QLNguoiDung/SuaTk/@Model[i].MaNguoiDung" class="btn btn-outline btn-primary">Sửa</a></td>
                              <td><a href="/Admin/QLNguoiDung/XoaTk/@Model[i].MaNguoiDung" class="btn btn-outline btn-primary">Xóa</a></td>
                         </tr>
                    @*}
                    else
                    {
                         <tr class="odd gradeA">

                              <td>@Model[i].MaNguoiDung</td>
                              <td>@Model[i].UserName</td>
                              <td>@Model[i].Password</td>
                              <td><a href="/QLNguoiDung/SuaTk/@Model[i].MaNguoiDung" class="btn btn-outline btn-primary">Sửa</a></td>
                              <td><a href="/QLNguoiDung/XoaTk/@Model[i].MaNguoiDung" class="btn btn-outline btn-primary">Xóa</a></td>

                         </tr>
                    }*@
               }
          </tbody>
     </table>
</div>

