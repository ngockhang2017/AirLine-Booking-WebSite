@*@model IEnumerable<Final_APP.Entities.ChangBay>*@
@model PagedList.IPagedList<DatVeMayBay.Models.ChangBay>
@using PagedList.Mvc;
@{ ViewBag.Title = "IndexChangBay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h2>Chặng bay</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Sân bay cất cánh</th>
            <th scope="col">Sân bay hạ cánh</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.SanBay_CatCanh</td>
                <td>@item.SanBay_HaCanh</td>
                <td>
                    <a href="~/Admin/EditChangBay?id=@item.MaChangBay" class=" btn btn-outline-dark">
                        Sửa
                    </a>
                </td>

            </tr>
        }

    </tbody>
</table>

<!-- Thêm mã phân trang -->
<br />
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("IndexChangBay",
    new { page }),
    new PagedListRenderOptions()
    {
        LiElementClasses = new List<string> { "page-link" }
    })
<!-- Kết thúc -->

<br />
<script src="~/assets/js/JavaScript.js"></script>
<script>
    var tables = document.getElementsByTagName('table');
    var table = tables[tables.length - 1];
    var rows = table.rows;
    for (var i = 1, td; i < rows.length; i++) {
        td = document.createElement('td');
        td.appendChild(document.createTextNode(i));
        rows[i].insertBefore(td, rows[i].firstChild);
    }</script>
<h2>Chú thích</h2>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Mã</th>
            <th scope="col" class="px-3">Tên</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in ViewBag.SanBay)
        {
            <tr>
                <td>@i.MaSanBay</td>
                <td class="px-3">@i.TenSanBay</td>
            </tr>
        }

    </tbody>
</table>
<br />
