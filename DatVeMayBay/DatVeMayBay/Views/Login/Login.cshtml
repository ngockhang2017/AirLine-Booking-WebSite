@model DatVeMayBay.Models.Admin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <span class="badge badge-danger">@ViewBag.sucess</span>


    <form id="formAuthentication" class="mb-3">
        <div class="mb-3">
            <label for="email" class="form-label">Tài khoản</label>
            <input data-val="true"
                   data-val-length="The field TenDangNhap must be a string with a maximum length of 30."
                   data-val-length-max="30"
                   id="TaiKhoan"
                   name="TaiKhoan"
                   value="@ViewBag.ten"
                   type="text"
                   class="form-control"
                   placeholder="Nhập tên đăng nhập"
                   autofocus />
            @Html.ValidationMessageFor(a => a.TaiKhoan)
        </div>
        <div class="mb-3 form-password-toggle">
            <div class="d-flex justify-content-between">
                <label class="form-label" for="password">Mật khẩu</label>
                <a href="">
                    <small>Quên mật khẩu ?</small>
                </a>
            </div>
            <div class="input-group input-group-merge">
                <input data-val="true"
                       data-val-length="The field MatKhau must be a string with a maximum length of 30."
                       data-val-length-max="30"
                       data-val-required="The MatKhau field is required."
                       id="MatKhau"
                       name="MatKhau"
                       value="@ViewBag.matk"
                       type="password"
                       class="form-control"
                       placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                       aria-describedby="password" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
            </div>
            @Html.ValidationMessageFor(a => a.TaiKhoan)
        </div>
        <div class="mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="remember-me" />
                <label class="form-check-label" for="remember-me"> Ghi nhớ  </label>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary d-grid w-100" type="submit">Đăng nhập</button>
        </div>
    </form>
}
<p class="text-center">
    <span>Chưa có tài khoản ?</span>
    <a href="~/Login/Register">
        <span>Đăng kí</span>
    </a>
</p>
<p class="text-center">
    <a href="~/Home/Index">
        <span> Đăng nhập không cần tài khoản</span>
    </a>
</p>
